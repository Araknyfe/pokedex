            <div class="button type-Ice"><a href="{{ path_for('type', { 'type': 'Ice' }) }}">Ice</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Fighting"><a href="{{ path_for('type', { 'type': 'Fighting' }) }}">Fighting</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Fairy"><a href="{{ path_for('type', { 'type': 'Fairy' }) }}">Fairy</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Electric"><a href="{{ path_for('type', { 'type': 'Electric' }) }}">Electric</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Dragon"><a href="{{ path_for('type', { 'type': 'Dragon' }) }}">Dragon</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Dark"><a href="{{ path_for('type', { 'type': 'Dark' }) }}">Dark</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Bug"><a href="{{ path_for('type', { 'type': 'Bug' }) }}">Bug</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Flying"><a href="{{ path_for('type', { 'type': 'Flying' }) }}">Flying</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Ground"><a href="{{ path_for('type', { 'type': 'Ground' }) }}">Ground</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Ghost"><a href="{{ path_for('type', { 'type': 'Ghost' }) }}">Ghost</a></div>
        </div>
