        </div>
        <div class="buttonArrange">
            <div class="button type-Normal"><a href="{{ path_for('type', { 'type': 'Normal' }) }}">Normal</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Psychic"><a href="{{ path_for('type', { 'type': 'Psychic' }) }}">Psychic</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Rock"><a href="{{ path_for('type', { 'type': 'Rock' }) }}">Rock</a></div>
        </div>
        <div class="buttonArrange">
            <div class="button type-Steel"><a href="{{ path_for('type', { 'type': 'Steel' }) }}">Steel</a></div>
        </div>

    </div>

    {% for pokemon in pokemons %}
        <a href="{{ path_for('pokemon', { 'slug': pokemon.slug }) }}">
            <div class="container">
                <div class="pokemonList type-{{ pokemon.main_type }}">
                    <div class="pokemonImg">
                        <img src="/img{{ pokemon.picture }}" alt="{{ pokemon.slug }}">
                    </div>
                    <div class="pokemonInfo">
                        <div><strong>Name:</strong> {{ pokemon.name }}</div>
                        {#<div><strong>Height:</strong> {{ pokemon.height }}</div>
                        <div><strong>Weight:</strong> {{ pokemon.weight }}</div>#}
                        <div><strong>Main type:</strong> {{ pokemon.main_type }}</div>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}

{% endblock %}
